# iFlow Agent 环境变量配置示例
# 复制此文件为 .env 并填写实际配置值

# ============================================
# 后端配置
# ============================================

# 服务器配置
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_DEBUG=false

# 数据库配置
DATABASE_URL=sqlite:///./storage/database.db
# DATABASE_URL=postgresql://user:password@localhost:5432/iflow
# DATABASE_URL=mysql://user:password@localhost:3306/iflow

# JWT 认证配置
JWT_SECRET=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# iFlow SDK 配置
IFLOW_SDK_API_KEY=your-iflow-sdk-api-key
IFLOW_SDK_BASE_URL=https://api.iflow.example.com

# AI 模型配置
AI_MODEL=gpt-4
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000

# RAG 配置
RAG_MODE=tfidf
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# 前端配置
# ============================================

# Vite 配置
VITE_PORT=5173
VITE_HOST=localhost

# API 配置
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_BASE_URL=ws://localhost:8000

# Node.js 服务器配置
NODE_SERVER_PORT=3001

# ============================================
# OCR 配置（可选）
# ============================================

# OCR 引擎选择：paddleocr, tesseract, online
OCR_ENGINE=paddleocr

# PaddleOCR 配置
PADDLEOCR_USE_ANGLE_CLS=true
PADDLEOCR_LANG=ch

# Tesseract 配置
TESSERACT_LANG=chi_sim+eng

# 在线 OCR API 配置
ONLINE_OCR_API_KEY=your-online-ocr-api-key
ONLINE_OCR_API_URL=https://api.ocr.example.com

# ============================================
# 开发工具配置
# ============================================

# 是否启用热重载
VITE_HMR=true

# 是否启用源码映射
VITE_SOURCE_MAP=true

# ============================================
# 安全配置
# ============================================

# CORS 配置
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# 速率限制
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ============================================
# 功能开关
# ============================================

# 是否启用 RAG 功能
ENABLE_RAG=true

# 是否启用 OCR 功能
ENABLE_OCR=false

# 是否启用 TaskMaster
ENABLE_TASKMASTER=true

# 是否启用代码审查
ENABLE_CODE_REVIEW=true

# ============================================
# 监控和日志
# ============================================

# 是否启用性能监控
ENABLE_PERFORMANCE_MONITOR=true

# 是否启用错误追踪
ENABLE_ERROR_TRACKING=true

# Sentry DSN（可选）
SENTRY_DSN=

# ============================================
# 第三方服务配置（可选）
# ============================================

# GitHub 配置（用于 Git 操作）
GITHUB_TOKEN=

# OpenAI 配置（如果使用 OpenAI API）
OPENAI_API_KEY=

# Anthropic 配置（如果使用 Anthropic API）
ANTHROPIC_API_KEY=

# ============================================
# 文件存储配置
# ============================================

# 最大文件上传大小（MB）
MAX_UPLOAD_SIZE=10

# 允许的文件类型
ALLOWED_FILE_TYPES=.txt,.md,.json,.py,.js,.jsx,.ts,.tsx,.html,.css

# 文件存储路径
UPLOAD_DIR=./storage/uploads

# ============================================
# 缓存配置
# ============================================

# Redis 配置（可选，用于缓存）
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# 缓存过期时间（秒）
CACHE_TTL=3600

# ============================================
# 其他配置
# ============================================

# 时区
TZ=Asia/Shanghai

# 语言
LANGUAGE=zh-CN

# 应用名称
APP_NAME=iFlow Agent

# 应用版本
APP_VERSION=1.12.0